def tower_of_hanoi(n, s, t, d):
    if n == 1:
        print(f"Move disk 1 from {s} to {d}")
        return
    tower_of_hanoi(n - 1, s, d, t)
    print(f"Move disk {n} from {s} to {d}")
    tower_of_hanoi(n - 1, t, s, d)

# Example usage:
n =2 # Number of disks
tower_of_hanoi(n, 'Source', 'Temp', 'Destination')

